#!/usr/bin/env bash

function join_by { local d=$1; shift; local f=$1; shift; printf %s "$f" "${@/#/$d}"; }


current_directory="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $current_directory/../common/common.sh


parser=$current_directory/../common/rez_yaml_tester.awk
request=$1

if [ -z "$request" == "" ]
then
    echo >&2 "You must specify a test name to resolve as."

    exit 1
fi

package_name=`get_local_rez_package $PWD`
nearest_package=`find_nearest_rez_package $PWD`
requirements=$(REZ_PACKAGES_PATH=`dirname $nearest_package` rez-view --brief $package_name | awk --assign=request="$request" -f $parser)
`echo $requirements | sort | uniq)

echo `join_by $requirements`
